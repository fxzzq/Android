<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/users_id"
        android:textSize="20dp"
        android:text="序号"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/users_kb1"
        android:layout_below="@+id/users_id"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"


        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/users_id"
        android:id="@+id/users_name"
        android:textSize="20dp"
        android:text="用户名"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/users_kb2"
        android:layout_below="@+id/users_name"
        android:layout_toRightOf="@+id/users_kb1"
        android:textSize="20dp"
        android:gravity="center_horizontal"

        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/users_name"
        android:id="@+id/users_password"
        android:textSize="20dp"
        android:text="密码"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/users_password"
        android:id="@+id/users_kb3"
        android:layout_toRightOf="@+id/users_kb2"
        android:textSize="20dp"
        android:gravity="center_horizontal"

        />
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"

        android:id="@+id/CZ"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:text="操作"
       />
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CZ"
        android:id="@+id/CZ_1"

        android:layout_alignParentRight="true"
        android:textSize="20dp"

        android:text="删除"
        />

</RelativeLayout>